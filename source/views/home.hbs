<!-- Main Container -->
<div class="container">
      <section >
        <!-- Grid row -->
        <div class="row">
          <!-- Grid column -->
          <div class="col-12">
            <div class="divider-new">
              <h3 class="h3-responsive font-weight-bold dark-grey-text mx-3" style="font-size:1cm">Khóa học nổi bật</h3>
            </div>
            <br>
            <!-- Grid row -->
            <div class="row">
              {{#if special_courses}}
              {{#each special_courses}}
              <div class="col-lg-4 col-md-12 mb-4">
                <!-- Card -->
                <div class="card card-ecommerce4">
                  <!-- Card image -->
                  <div class="view overlay">
                    <img src="{{image}}" class="img-fluid" alt="Not image">
                    <a href="/course/{{id}}">
                      <div class="mask rgba-white-slight"></div>
                    </a>
                  </div>
                  <!-- Card image -->
                  <!-- Card content -->
                  <div class="card-body">
                    <!-- Category & Title -->
                    <h5 class="card-title mb-1">
                      <strong>
                        <a href="/course/{{id}}" class="dark-grey-text">{{title}}</a>
                      </strong>
                    </h5>
                    <span class="badge badge-danger mb-2">Best seller</span>
                    <script>
                      if ({{ discount }} > 0)
                      document.write('<span class="badge badge-success mb-2 ml-2">SALE</span>');
                    </script>
                    <!-- Rating -->
                    <h5 class="h5-responsive text-center text-md-left ml-xl-0 ml-4">
                      <span>
                        <script>
                          const courseModel = require('../models/course.model');
                          var point = await courseModel.getAverageStar({{ id }});
                          console.log(point);
                          for (var j = 1; j <= 5; j++) {
                            if (point >= 1) {
                              document.write('<i class="fas fa-star orange-text"></i>');
                              point -= 1;
                              continue;
                            }
                            if (point > 0) {
                              document.write('<i class="fas fa-star-half orange-text"></i>');
                              point -= 1;
                              continue;
                            }
                            document.write('<i class="far fa-star orange-text"></i>');
                            point -= 1;
                          }
                        </script>
                      </span>
                    </h5>
                    <!-- Card footer -->
                    <div class="card-footer pb-0">
                      <div class="row mb-0">
                        {{#is discount 0}}
                        <span class="red-text font-weight-bold">
                          <strong>{{full_price}} </strong>
                          <small>
                            $
                          </small>
                        </span>
                        {{else}}
                        <span class="grey-text">
                          <s>
                            <strong>{{full_price}} </strong>
                            <small>
                              $
                            </small>
                          </s>
                          <span class="red-text font-weight-bold">
                            <strong>{{price}} </strong>
                            <small>
                              $
                            </small>
                          </span>
                        </span>
                        {{/is}}
                        {{#if ../session/username}}
                        <span class="float-right">
                          {{#if isBuy}}
                          <a class="" data-toggle="tooltip" data-placement="top" title="Was buy">
                            <i class="fas fa-check ml-3"></i>
                          </a>
                          {{else}}
                          {{#if inCart}}
                          <a class="" data-toggle="tooltip" data-placement="top" title="In Cart"
                            href="/cart">&nbsp;&nbsp;
                            <i class="fas fa-luggage-cart"></i>
                          </a>
                          {{else}}
                          <a class="" id="addToCard{{id}}" data-toggle="tooltip" data-placement="top"
                            title="Add to Cart" onclick="addToCartFunction({{id}});">
                            <i class="fas fa-cart-plus ml-3"></i>
                          </a>
                          {{/if}}
                          {{/if}}
                          {{/if}}
                        </span>
                      </div>
                    </div>
                  </div>
                  <!-- Card content -->
                </div>
                <!-- Card -->
              </div>
              {{/each}}
              {{/if}}
            </div>
          </div>
