<!DOCTYPE html>
<html>

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS and icon -->
  <!-- Font Awesome -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" rel="stylesheet" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
  <!-- Bootstrap -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.css">
  <!-- MDB -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.0.0/mdb.min.css" rel="stylesheet" />
  <!-- Icon -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
  <link rel="stylesheet" type="text/css" href="/css/main.css">
  <!--link rel="stylesheet" type="text/css" href="/css/mdb.css"-->
  <link rel="stylesheet" type="text/css" href="/css/{{style}}">
  <link rel="shortcut icon" href="/image/logo-temp.svg">

</head>


<header>
  <nav class="navbar navbar-expand-lg navbar-light shadow-sm bg-light fixed-top">
    <div class="container">

      <!--Logo -->
      <a class="navbar-brand d-flex align-items-center" href="../">
        <img src="/image/logo-temp.svg" alt="logo" height="50">
        <span class="ml-3 font-weight-bold">E-EDU</span>
      </a>

      <!--collapse -->
      <button class="navbar-toggler navbar-toggler-right border-0" type="button" data-toggle="collapse"
        data-target="#navbarNav" aria-controls="navbarNav">
        <span class="navbar-toggler-icon"><i class="fas fa-bars" style="color:black;"></i></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarNav">

        <!-- left -->
        <ul class="navbar-nav mr-auto">

          <!-- category -->
          <div class="dropdown btn-group shadow-0">
            <a class="btn btn-light dropdown-toggle" href="/" role="button" id="dropdownMenuLink" data-toggle="dropdown"
              aria-haspopup="true" aria-expanded="false">
              Category
            </a>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuLink">

              {{#each lcAllCategories}}
              {{#if hasSubCategory}}
              <li class="dropdown-submenu"><a class="dropdown-item dropdown-toggle" href="/{{id}}">{{name}}</a>
                <ul class="dropdown-menu">

                  {{#each subCategory}}
                  <li><a class="dropdown-item" href="{{category_id}}/{{id}}">{{name}}</a></li>
                  {{/each}}
                </ul>
              </li>
              {{else}}
              <li><a class="dropdown-item" href="/{{id}}">{{name}}</a></li>
              {{/if}}
              {{/each}}
              <li><a class="dropdown-item" href="/">Commerce</a></li>
            </ul>
          </div>
        </ul>

        <!-- right -->
        <ul class="navbar-nav nav-flex-icons">
          <li class="nav-item">
            <!-- Search form -->
            <form class="form-inline ">
              <input class="form-control mr-3 w-75" type="text" placeholder="Search" aria-label="Search">
              <i class="fas fa-search" aria-hidden="true"></i>
            </form>
          </li>
          {{#if session.username}}
          <li class="nav-item mr-2">
            <a href="/account/logout" class="btn btn-outline-success" type="button">Logout</a>
          </li>
          {{else}}
          <li class="nav-item mr-2">
            <a href="/account/login" class="btn btn-outline-success" type="button">Login</a>
          </li>
          <li class="nav-item mr-2">
            <a href="/account/register" class="btn btn-info mr-2" type="button">SignUp</a>
          </li>
          {{/if}}
        </ul>
      </div>
    </div>
  </nav>
  <!-- navbar-->
</header>

