{{#section 'titleExtraText'}}| My Course {{/section}}

{{#section 'css'}}
<style>
  body {
    padding-top: 35px;
  }
    .word-wrap-one-line {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1; /* number of lines to show */
    -webkit-box-orient: vertical;
  }

</style>
{{/section}}


<!--Main layout-->
<main>
  <div class="container">
    <!--Section: Block Content-->
    <section class="mt-5 mb-4">
      {{#if hasCourse}}
      <div class="container text-center py-5">
        <h3 class="mb-0 font-weight-bold"><i class="fas fa-chalkboard"></i> My Course</h3>
      </div>
      <!--Grid row-->
      <div class="row">
        <!--Grid column-->
        <div class="col-lg-2"></div>
        <div class="col-lg-8">

          <div class="card mb-4">

            <div class="card-body">

              <h5 class="mb-4"><span>{{items.length}}</span> items</h5>
              {{#each items}}
              <div class="row mb-4">
                <div class="col-md-5 col-lg-3 col-xl-3">
                  <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                    <img class="img-fluid" width="240" height="135" src={{this.image_sm}} alt="Sample">
                    <a href="/course/{{this.id}}">
                      <div class="mask waves-effect waves-light">
                        <img class="img-fluid w-100" width="240" height="135" src="">
                        <div class="mask rgba-black-slight waves-effect waves-light"></div>
                      </div>
                    </a>
                  </div>
                </div>
                <div class="col-md-7 col-lg-9 col-xl-9">
                  <div>
                    <div class="d-flex justify-content-between">
                      <div>
                        <p><a href="/course/{{this.id}}" class="text-dark word-wrap-one-line">{{this.title}}</a></p>
                        <p class="mb-3 text-muted text-uppercase small word-wrap-one-line">By {{this.instructors}}
                        </p>
                        <p>
                          <span>
                            <small class="orange-text">{{this.averageStar}}</small>
                            <span>
                              <script>
                                var point = {{ this.averageStar }};
                                for (var j = 1; j <= 5; j++) {
                                  if (point >= 1) {
                                    document.write('<i class="fas fa-star orange-text"></i>');
                                    point -= 1;
                                    continue;
                                  }
                                  if (point > 0) {
                                    document.write('<i class="fas fa-star-half orange-text"></i>');
                                    point -= 1;
                                    continue;
                                  }
                                  document.write('<i class="far fa-star orange-text"></i>');
                                  point -= 1;
                                }
                              </script>
                            </span>
                            <span class="small">({{this.countRating}} ratings) {{this.countStudent}} students</span>
                          </span>
                        </p>
                      </div>
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                      <div>
                        <!-- TODO: EDIT THE LECTURE LINK -->
                        <a type="button" class="card-link-secondary small text-uppercase mr-3 watchlistRemoveAction"
                          href="/course/{{this.id}}/edit">
                          <i class="fas fa-edit"></i> Edit course </a>
                        <a type="button" class="card-link-secondary small text-uppercase mr-3 watchlistRemoveAction"
                          href="/course/{{this.id}}/editVideo">
                          <i class="fas fa-photo-video"></i> Edit video </a>

                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <hr class="mb-4">
              {{/each}}
              <nav class="d-flex flex-row-reverse">
                <ul class="pagination">
                  <li class="page-item disabled">
                    <span class="page-link">Previous</span>
                  </li>
                  {{#each this.page_numbers}}
                  {{#if isCurrentPage}}
                  <li class="page-item active">
                    <a class="page-link" href="javascript:;">{{value}}</a>
                  </li>
                  {{else}}
                  <li class="page-item">
                    <a class="page-link" href="?page={{value}}">{{value}}</a>
                  </li>
                  {{/if}}
                  {{/each}}
                  <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                  </li>
                </ul>
              </nav>
            </div>
          </div>
          <!-- Card -->

        </div>
        <!--Grid column-->
      </div>
      <!--Grid row-->

      {{else}}
      <div class="view zoom z-depth-1">
        <img src="https://images.unsplash.com/photo-1581848069322-2af0bc2deab8?fit=crop&w=1200&h=500&q=80"
          class="img-fluid" alt="Empty watchlist image">
        <div class="mask">
          <div class="dark-grey-text pt-4 ml-3 pl-3">
            <div>
              <h2 class="card-title font-weight-bold pt-2">
                <strong>Your course is empty</strong>
              </h2>
              <p class="">Your course is empty. Your course progress will appear hear!</p>
              <a class="btn btn-danger btn-sm btn-rounded clearfix d-none d-md-inline-block waves-effect waves-light"
                href="/">
                Keep browsing</a>
            </div>
          </div>
        </div>
      </div>
      {{/if}}

    </section>
    <!--Section: Block Content-->

  </div>
</main>
<!--Main layout-->