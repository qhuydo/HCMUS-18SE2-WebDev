<section class="view intro-2">
  <div class="mask rgba-gradient wow fadeIn" data-wow-delay="0.2s">
    <form onsubmit="checkKeyPress(event)" class=" container h-100 d-flex justify-content-center align-items-center needs-validation" method="post"
      novalidate>

